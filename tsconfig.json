{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleDetection": "auto",
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDir": "./dist", 
    "outDir": "./lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
  },
  "exclude": ["node_modules", "lib", "tests", ".vscode"]
}